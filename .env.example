# VPN Synchronization Project Settings

# Base path of the mounted VPN
VPN_BASE_PATH="/mnt/pareto"

# Google Cloud Platform
GOOGLE_APPLICATION_CREDENTIALS="credentials.json"
GCP_PROJECT_ID="pareto-engine-n8n"

# Google Cloud Storage
GCS_BUCKET_NAME="hedge-investments"
GCS_TEMP_BUCKET="workflow-temp-files"

# BigQuery
BIGQUERY_DATASET_ID="HEDGE"
BIGQUERY_TABLE_ID="vpn_files"
BIGQUERY_LOG_TABLE_ID="sync_log"

# Synchronization Settings
# Batch size for batch operations in BigQuery
SYNC_BATCH_SIZE=1000

# Limit for using JSONL in GCS (number of files)
SYNC_USE_JSONL_THRESHOLD=1000

# Interval to display progress (number of files)
SYNC_PROGRESS_INTERVAL=1

# Upload settings
# Number of retries in case of failure
UPLOAD_RETRY_ATTEMPTS=3

# Delay between retries in seconds
UPLOAD_RETRY_DELAY=1.0